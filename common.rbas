 #IFDEF IS_CUSTOM
  IF cleanup_workingdir_on_error ANDALSO LEN(workingdir) ANDALSO isdir(workingdir) THEN
   touchfile workingdir & SLASH & "__danger.tmp"
   killdir workingdir
